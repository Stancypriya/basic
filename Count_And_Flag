public class Count_And_Flag {

 public static void main(String[] args) {
  int count = 0;
  boolean flag = false;

  // find 7 multiples and how many 7 multiple in first 100 numbers

  for (int i = 1; i <= 100; ++i) {
   if (i % 7 == 0) {
    flag = true;
    count = count + 1;
    System.out.println(i); // 7th table
   }
  }
  System.out.println(flag); // boolean flag
  System.out.println(count); // how many number present
 }
}
